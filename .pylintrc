[MASTER]
# Используем несколько процессов для ускорения
jobs=0

[MESSAGES CONTROL]
# Отключаем некоторые предупреждения, которые не критичны для Discord бота
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0103,  # invalid-name (для переменных e, f в исключениях)
    C0303,  # trailing-whitespace
    C0301,  # line-too-long
    W0621,  # redefined-outer-name
    W0718,  # broad-exception-caught
    W0612,  # unused-variable
    W0611,  # unused-import
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R1705,  # no-else-return
    W1203,  # logging-fstring-interpolation
    C0415,  # import-outside-toplevel
    E0237,  # assigning-non-slot
    W0107,  # unnecessary-pass
    W1514,  # unspecified-encoding
    R1722,  # consider-using-sys-exit
    E1101,  # no-member (для discord.py методов)
    C0327,  # mixed-line-endings

[REPORTS]
# Устанавливаем порог для вывода отчета
output-format=text
score=yes

[FORMAT]
# Максимальная длина строки
max-line-length=120

[BASIC]
# Стиль именования переменных
good-names=i,j,k,ex,Run,_,e,f

[SIMILARITIES]
# Минимальное количество строк для дублирования
min-similarity-lines=4

[MISCELLANEOUS]
# Список заметок
notes= 